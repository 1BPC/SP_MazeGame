<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0"
            prefWidth="1080.0"
            style="-fx-background-color: #262626;"
            xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.loginController">
    <AnchorPane layoutX="322.0"
                layoutY="203.0"
                prefHeight="315.0"
                prefWidth="424.0"
                style="-fx-background-color: #FFFFFF;">

        <!--ADD BUTTON-->
        <Button layoutX="106.0"
                layoutY="245.0"
                mnemonicParsing="false"
                onAction="#login"
                prefHeight="35.0"
                prefWidth="212.0"
                style="-fx-background-color: #43D9BD;"
                text="Log In"
                textFill="WHITE">
            <font>
                <Font name="System Bold"
                      size="16.0"/>
            </font>
        </Button>

        <!-- ADD PASSWORD FIELD -->
        <PasswordField fx:id="txtPassword"
                       layoutX="70.0"
                       layoutY="178.0"
                       prefHeight="45.0"
                       prefWidth="284.0"
                       promptText="Password"
                       style="-fx-background-color: transparent; -fx-border-color: #43D9BD; -fx-border-width: 0px 0px 3px 0px;"/>

        <!-- ADD TEXT FIELD -->
        <TextField fx:id="txtUserName"
                   layoutX="70.0"
                   layoutY="112.0"
                   prefHeight="45.0"
                   prefWidth="284.0"
                   promptText="Username"
                   style="-fx-background-color: transparent; -fx-border-color: #43D9BD; -fx-border-width: 0px 0px 3px 0px;"/>

        <!-- ADD LABEL -->
        <Label fx:id="statusLbl"
               alignment="CENTER"
               layoutX="68.0"
               layoutY="293.0"
               prefHeight="17.0"
               prefWidth="302.0"/>
        <Label layoutX="172.0"
               layoutY="20.0"
               text="Log In"
               textFill="#727272">
            <font>
                <Font name="System Bold" size="27.0"/>
            </font>
        </Label>

        <!-- ADD HYPERLINK -->
        <Hyperlink contentDisplay="CENTER"
                   layoutX="131.0"
                   layoutY="66.0"
                   text="New user? Create an account"
                   textAlignment="CENTER"
                   textFill="#8d8d8d"
                   underline="true"/>
    </AnchorPane>
    <!-- ADD LABEL -->
    <Label alignment="CENTER"
           layoutX="418.0"
           layoutY="84.0"
           prefHeight="61.0"
           prefWidth="230.0"
           text="MAZE GAME"
           textFill="WHITE">
        <font>
          <Font name="System Bold"
                size="37.0"/>
        </font>
    </Label>
    <!-- ADD MENU BAR -->
    <MenuBar layoutX="7.0"
             layoutY="14.0"
             style="-fx-background-color: #43D9BD;"
             AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">

        <!-- ADD MENU TAB -->
        <Menu mnemonicParsing="false"
              text="File">
            <!-- ADD MENU ITEM -->
            <MenuItem mnemonicParsing="false"
                      text="Close"/>
            <!-- ADD MENU TAB -->
        </Menu>
        <Menu mnemonicParsing="false"
              text="Info">
            <!-- ADD MENU ITEM -->
            <MenuItem mnemonicParsing="false"
                      text="Delete"/>
            <!-- ADD MENU TAB -->
        </Menu>
        <Menu mnemonicParsing="false"
              text="Help">
            <!-- ADD MENU ITEM -->
            <MenuItem mnemonicParsing="false"
                      text="About"/>
        </Menu>
    </MenuBar>

    <!-- ADD RECTANGLE -->
    <Rectangle arcHeight="5.0"
               arcWidth="5.0"
               fill="#e8e8e8"
               height="45.0"
               layoutX="322.0"
               layoutY="518.0"
               stroke="TRANSPARENT"
               strokeType="INSIDE"
               width="424.0"/>

    <!-- ADD HYPERLINK -->
    <Hyperlink contentDisplay="CENTER"
               layoutX="436.0"
               layoutY="531.0"
               text="Forgot your password? Get it back!"
               textAlignment="CENTER" textFill="#8d8d8d"
               underline="true"/>
</AnchorPane>
